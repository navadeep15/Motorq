<%- include('../layout') %>

<h2>Edit Car</h2>

<form action="/admin/cars/edit/<%= car._id %>" method="POST">
    <label for="make">Make:</label>
    <input type="text" name="make" value="<%= car.make %>" required>

    <label for="model">Model:</label>
    <input type="text" name="model" value="<%= car.model %>" required>

    <label for="year">Year:</label>
    <input type="number" name="year" value="<%= car.year %>" required>

    <label for="registrationNumber">Registration Number:</label>
    <input type="text" name="registrationNumber" value="<%= car.registrationNumber %>" required>

    <label for="fuelType">Fuel Type:</label>
    <input type="text" name="fuelType" value="<%= car.fuelType %>" required>

    <label for="rentPerDay">Rent Per Day:</label>
    <input type="number" name="rentPerDay" value="<%= car.rentPerDay %>" required>

    <button type="submit">Update Car</button>
</form>
